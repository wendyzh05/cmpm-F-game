{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Game DSL Schema",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "savePoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "slot": { "type": "integer", "minimum": 0 },
          "label": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "themeOverrides": {
      "type": "object",
      "properties": {
        "light": {
          "type": "object",
          "properties": {
            "ambientIntensity": { "type": "number" },
            "sunIntensity": { "type": "number" }
          }
        },
        "dark": {
          "type": "object",
          "properties": {
            "ambientIntensity": { "type": "number" },
            "sunIntensity": { "type": "number" }
          }
        }
      }
    }
  }
}
